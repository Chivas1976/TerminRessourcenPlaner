@model TerminRessourcenPlaner.ViewModels.HomeDashboardViewModel

@{
    ViewData["Title"] = "Tagesübersicht";
    var datumText = Model.Datum.ToString("dddd, dd.MM.yyyy");
}

<div class="container mt-4">

    <!-- HERO -->
    <div class="dashboard-hero mb-4">
        <div class="d-flex flex-column flex-lg-row justify-content-between align-items-start align-items-lg-center gap-3">
            <div>
                <h1 class="mb-1">Tagesübersicht</h1>
                <div class="text-muted">@datumText</div>
                <div class="mt-2 small">
                    <strong>@Model.TermineHeuteAnzahl</strong> Termine heute ·
                    <strong>@Model.RessourcenGesamtAnzahl</strong> Ressourcen gesamt ·
                    <strong>@Model.RessourcenBelegtJetztAnzahl</strong> belegt ·
                    <strong>@Model.RessourcenFreiJetztAnzahl</strong> frei
                </div>
            </div>

            <div class="d-flex gap-2 flex-wrap">
                <a class="btn btn-primary" asp-controller="Termine" asp-action="Create">
                    + Neuer Termin
                </a>
                <a class="btn btn-outline-secondary" asp-controller="Termine" asp-action="Index">
                    Termine anzeigen
                </a>
            </div>
        </div>
    </div>

    <!-- KPI -->
    <div class="row g-3 mb-4">
        <div class="col-md-3">
            <div class="kpi-card text-center">
                <div class="kpi-label">Termine heute</div>
                <div class="kpi-value">@Model.TermineHeuteAnzahl</div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="kpi-card text-center">
                <div class="kpi-label">Ressourcen gesamt</div>
                <div class="kpi-value">@Model.RessourcenGesamtAnzahl</div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="kpi-card text-center">
                <div class="kpi-label">Belegt (jetzt)</div>
                <div class="kpi-value">@Model.RessourcenBelegtJetztAnzahl</div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="kpi-card text-center">
                <div class="kpi-label">Frei (jetzt)</div>
                <div class="kpi-value">@Model.RessourcenFreiJetztAnzahl</div>
            </div>
        </div>
    </div>

    <!-- CONTENT -->
    <div class="row g-4">

        <!-- NÄCHSTER TERMIN -->
        <div class="col-lg-6">
            <div class="section-card">
                <h2 class="section-title">Nächster Termin</h2>

                @if (Model.NaechsterTermin == null)
                {
                    <div class="text-muted">Kein kommender Termin vorhanden.</div>
                }
                else
                {
                    <div class="fw-bold">@Model.NaechsterTermin.Titel</div>
                    <div class="text-muted">
                        @Model.NaechsterTermin.Start.ToString("dd.MM.yyyy HH:mm")
                        – @Model.NaechsterTermin.Ende.ToString("HH:mm")
                    </div>
                    <div class="mt-1 small">
                        Ressourcen:
                        @string.Join(", ", Model.NaechsterTermin.RessourcenNamen)
                    </div>

                    <div class="mt-2">
                        <a class="btn btn-sm btn-outline-secondary"
                           asp-controller="Termine"
                           asp-action="Details"
                           asp-route-id="@Model.NaechsterTermin.TerminId">
                            Details
                        </a>
                    </div>
                }
            </div>
        </div>

        <!-- HEUTIGE TERMINE -->
        <div class="col-lg-6">
            <div class="section-card">
                <h2 class="section-title">Heutige Termine</h2>

                @if (!Model.HeutigeTermine.Any())
                {
                    <div class="text-muted">Heute sind keine Termine geplant.</div>
                }
                else
                {
                    <table class="table table-sm mt-2">
                        <thead>
                            <tr>
                                <th>Titel</th>
                                <th>Zeit</th>
                                <th>Ressourcen</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var t in Model.HeutigeTermine)
                            {
                                <tr>
                                    <td>@t.Titel</td>
                                    <td>@t.Start.ToString("HH:mm") – @t.Ende.ToString("HH:mm")</td>
                                    <td>@t.ZugewieseneRessourcenAnzahl</td>
                                    <td class="text-end">
                                        <a class="btn btn-sm btn-outline-secondary"
                                           asp-controller="Termine"
                                           asp-action="Details"
                                           asp-route-id="@t.TerminId">
                                            Details
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                }
            </div>
        </div>

    </div>
</div>