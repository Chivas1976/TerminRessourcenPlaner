@{
    ViewData["Title"] = "Start";
}

<div class="container mt-5">

    <!-- HERO -->
    <div class="dashboard-hero text-center">
        <h1 class="mb-2">Termin- & Ressourcenplanung</h1>
        <p class="text-muted mb-4">
            Verwalten Sie Termine, Mitarbeiter und Ressourcen einfach und effizient.
        </p>

        <div class="d-flex justify-content-center gap-3 flex-wrap">
            <a class="btn btn-primary btn-lg" asp-controller="Home" asp-action="Dashboard">
                Tagesübersicht öffnen
            </a>
            <a class="btn btn-outline-primary btn-lg" asp-controller="Termine" asp-action="Index">
                Termine verwalten
            </a>
        </div>
    </div>

    <div class="row g-4 mt-4">

        <!-- Termine -->
        <div class="col-md-4">
            <a asp-controller="Termine" asp-action="Index" class="card-link">
                <div class="feature-card">
                    <div class="feature-icon">📅</div>
                    <div class="feature-title">Termine</div>
                    <div class="feature-text">Termine anlegen, bearbeiten und übersichtlich verwalten.</div>
                </div>
            </a>
        </div>

        <!-- Ressourcen -->
        <div class="col-md-4">
            <a asp-controller="Ressourcen" asp-action="Index" class="card-link">
                <div class="feature-card">
                    <div class="feature-icon">🪑</div>
                    <div class="feature-title">Ressourcen</div>
                    <div class="feature-text">Mitarbeiter oder Stühle effizient planen und zuweisen.</div>
                </div>
            </a>
        </div>

        <!-- Tagesübersicht (Dashboard) -->
        <div class="col-md-4">
            <a asp-controller="Home" asp-action="Dashboard" class="card-link">
                <div class="feature-card">
                    <div class="feature-icon">📊</div>
                    <div class="feature-title">Übersicht</div>
                    <div class="feature-text">Tagesübersicht mit Belegung, freien Ressourcen und Terminen.</div>
                </div>
            </a>
        </div>

    </div>

</div>