@model IEnumerable<TerminRessourcenPlaner.Models.Termin>

@{
    ViewData["Title"] = "Termine";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h1 class="mb-0">Termine</h1>

    <a class="btn btn-primary" asp-action="Create">
        + Neuen Termin anlegen
    </a>
</div>

@if (!Model.Any())
{
    <div class="alert alert-info mt-4">
        <strong>Keine Termine vorhanden.</strong>
        Klicken Sie auf <em>„Neuen Termin anlegen“</em>, um den ersten Termin zu erstellen.
    </div>
}
else
{
    <table class="table table-striped table-hover align-middle">
        <thead>
            <tr>
                <th>Titel</th>
                <th>Start</th>
                <th>Ende</th>
                <th>Beschreibung</th>
                <th>Zugewiesene Ressourcen</th>
                <th class="text-end">Aktionen</th>
            </tr>
        </thead>

        <tbody>
            @foreach (var item in Model)
            {
                var anzahlRessourcen = item.TerminRessourcen?.Count ?? 0;

                <tr>
                    <td>@item.Titel</td>

                    <td>@item.Start.ToString("dd.MM.yyyy HH:mm")</td>

                    <td>@item.Ende.ToString("dd.MM.yyyy HH:mm")</td>

                    <td>@item.Beschreibung</td>

                    <td>
                        @if (anzahlRessourcen == 0)
                        {
                            <span class="badge bg-secondary">0</span>
                        }
                        else
                        {
                            <span class="badge bg-success">@anzahlRessourcen</span>
                        }
                    </td>

                    <td class="text-end">
                        <div class="btn-group" role="group">
                            <a class="btn btn-sm btn-outline-primary"
                               asp-action="Edit"
                               asp-route-id="@item.Id">
                                Bearbeiten
                            </a>

                            <a class="btn btn-sm btn-outline-secondary"
                               asp-action="Details"
                               asp-route-id="@item.Id">
                                Details
                            </a>

                            <a class="btn btn-sm btn-outline-danger"
                               asp-action="Delete"
                               asp-route-id="@item.Id">
                                Löschen
                            </a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}