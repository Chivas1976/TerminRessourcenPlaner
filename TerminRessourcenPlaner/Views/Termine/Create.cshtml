@model TerminRessourcenPlaner.Models.Termin

@{
    ViewData["Title"] = "Termin anlegen";
    var ressourcen = ViewBag.Ressourcen as IEnumerable<TerminRessourcenPlaner.Models.Ressource>;
    var ausgewaehlte = ViewBag.AusgewaehlteRessourcenIds as List<int> ?? new List<int>();
}

<h1>Termin anlegen</h1>
<hr />

<div class="row">
    <div class="col-md-8">

        <form asp-action="Create" method="post">
            @Html.AntiForgeryToken()

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="mb-3">
                <label asp-for="Titel" class="form-label">Titel</label>
                <input asp-for="Titel" class="form-control" />
                <span asp-validation-for="Titel" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Kundenname" class="form-label">Kundenname</label>
                <input asp-for="Kundenname" class="form-control" />
                <span asp-validation-for="Kundenname" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="DienstleistungId" class="form-label">Dienstleistung</label>
                <select asp-for="DienstleistungId"
                        class="form-select"
                        asp-items="@(ViewData["DienstleistungId"] as SelectList)">
                    <option value="">Bitte auswählen</option>
                </select>
                <span asp-validation-for="DienstleistungId" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Start" class="form-label">Start</label>
                <input asp-for="Start" class="form-control" type="datetime-local" />
                <span asp-validation-for="Start" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Beschreibung" class="form-label">Beschreibung</label>
                <input asp-for="Beschreibung" class="form-control" />
                <span asp-validation-for="Beschreibung" class="text-danger"></span>
            </div>

            <hr />
            <h4>Mitarbeiter auswählen</h4>

            <div class="border rounded p-3">
                @if (ressourcen == null || !ressourcen.Any())
                {
                    <div class="text-muted">Keine Mitarbeiter gefunden.</div>
                }
                else
                {
                    foreach (var r in ressourcen)
                    {
                        var istChecked = ausgewaehlte.Contains(r.Id);
                        <div class="form-check">
                            <input class="form-check-input"
                                   type="checkbox"
                                   name="selectedRessourcen"
                                   value="@r.Id"
                                   @(istChecked ? "checked" : "") />
                            <label class="form-check-label">@r.Name</label>
                        </div>
                    }
                }
            </div>

            <div class="mt-4">
                <button type="submit" class="btn btn-primary">Speichern</button>
                <a asp-action="Index" class="btn btn-secondary">Zurück zur Übersicht</a>
            </div>
        </form>

    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}