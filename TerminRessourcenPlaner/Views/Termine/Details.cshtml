@model TerminRessourcenPlaner.Models.Termin

@{
    ViewData["Title"] = "Termin Details";
}

<h1>Termin Details</h1>

<div class="card mb-4">
    <div class="card-body">
        <h4 class="card-title">@Model.Titel</h4>
        <hr />

        <dl class="row">
            <dt class="col-sm-3">Start</dt>
            <dd class="col-sm-9">
                @Model.Start.ToString("dd.MM.yyyy HH:mm")
            </dd>

            <dt class="col-sm-3">Ende</dt>
            <dd class="col-sm-9">
                @Model.Ende.ToString("dd.MM.yyyy HH:mm")
            </dd>

            <dt class="col-sm-3">Beschreibung</dt>
            <dd class="col-sm-9">
                @(!string.IsNullOrWhiteSpace(Model.Beschreibung)
                                ? Model.Beschreibung
                                : "Keine Beschreibung vorhanden")
            </dd>
        </dl>
    </div>
</div>

<div class="card mb-4">
    <div class="card-body">
        <h5>Zugewiesene Mitarbeiter</h5>

        @if (Model?.TerminRessourcen?.Any() == true)
        {
            foreach (var tr in Model.TerminRessourcen)
            {
                <span class="badge bg-secondary me-1 mb-1">
                    @tr.Ressource.Typ – @tr.Ressource.Name
                </span>
            }
        }
        else
        {
            <p class="text-muted mt-2">
                Keine Ressourcen für diesen Termin hinterlegt.
            </p>
        }
    </div>
</div>

<div>
    <a class="btn btn-outline-primary"
       asp-action="Edit"
       asp-route-id="@Model.Id">
        Bearbeiten
    </a>

    <a class="btn btn-outline-danger"
       asp-action="Delete"
       asp-route-id="@Model.Id">
        Löschen
    </a>

    <a class="btn btn-outline-secondary"
       asp-action="Index">
        Zurück zur Übersicht
    </a>
</div>