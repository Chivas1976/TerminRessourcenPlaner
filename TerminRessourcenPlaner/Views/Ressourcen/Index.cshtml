@model IEnumerable<TerminRessourcenPlaner.Models.Ressource>

@{
    ViewData["Title"] = "Ressourcen";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h1 class="mb-0">Ressourcen</h1>

    <a class="btn btn-primary" asp-action="Create">
        + Neue Ressource anlegen
    </a>
</div>

@if (!Model.Any())
{
    <div class="alert alert-info mt-4">
        <strong>Keine Ressourcen vorhanden.</strong>
        Klicken Sie auf <em>„Neue Ressource anlegen“</em>, um die erste Ressource zu erstellen.
    </div>
}
else
{
    <table class="table table-striped table-hover align-middle">
        <thead>
            <tr>
                <th>Name</th>
                <th>Typ</th>
                <th class="text-end">Aktionen</th>
            </tr>
        </thead>

        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>
                        <span class="badge bg-secondary">@item.Typ</span>
                    </td>

                    <td class="text-end">
                        <div class="btn-group" role="group">
                            <a class="btn btn-sm btn-outline-primary"
                               asp-action="Edit"
                               asp-route-id="@item.Id">
                                Bearbeiten
                            </a>

                            <a class="btn btn-sm btn-outline-secondary"
                               asp-action="Details"
                               asp-route-id="@item.Id">
                                Details
                            </a>

                            <a class="btn btn-sm btn-outline-danger"
                               asp-action="Delete"
                               asp-route-id="@item.Id">
                                Löschen
                            </a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}