@model TerminRessourcenPlaner.Models.Ressource

@{
    ViewData["Title"] = "Ressource Details";
}

<h1>Ressource Details</h1>

<div class="card mb-4">
    <div class="card-body">
        <h4 class="card-title">@Model.Name</h4>
        <hr />

        <dl class="row">
            <dt class="col-sm-3">Typ</dt>
            <dd class="col-sm-9">@Model.Typ</dd>
        </dl>
    </div>
</div>

<div class="card mb-4">
    <div class="card-body">
        <h5>Zugeordnete Termine</h5>

        @if (Model?.TerminRessourcen?.Any() == true)
        {
            foreach (var tr in Model.TerminRessourcen.OrderBy(x => x.Termin.Start))
            {
                <span class="badge bg-secondary me-1 mb-1">
                    @tr.Termin.Start.ToString("dd.MM.yyyy HH:mm") – @tr.Termin.Titel
                </span>
            }
        }
        else
        {
            <p class="text-muted mt-2">
                Für diese Ressource sind keine Termine hinterlegt.
            </p>
        }
    </div>
</div>

<div>
    <a class="btn btn-outline-primary"
       asp-action="Edit"
       asp-route-id="@Model.Id">
        Bearbeiten
    </a>

    <a class="btn btn-outline-secondary"
       asp-action="Index">
        Zurück zur Übersicht
    </a>
</div>

<hr class="my-4" />

<div class="card">
    <div class="card-body">
        <h4 class="card-title mb-3">Termine von @Model.Name</h4>

        @if (Model.TerminRessourcen == null || !Model.TerminRessourcen.Any())
        {
            <div class="alert alert-info mb-0">
                Für diese Ressource sind aktuell keine Termine hinterlegt.
            </div>
        }
        else
        {
            <div class="table-responsive">
                <table class="table table-striped table-hover align-middle mb-0">
                    <thead>
                        <tr>
                            <th>Titel</th>
                            <th>Start</th>
                            <th>Ende</th>
                            <th>Beschreibung</th>
                            <th class="text-end">Aktionen</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var tr in Model.TerminRessourcen.OrderBy(x => x.Termin.Start))
                        {
                            <tr>
                                <td>@tr.Termin.Titel</td>
                                <td>@tr.Termin.Start.ToString("dd.MM.yyyy HH:mm")</td>
                                <td>@tr.Termin.Ende.ToString("dd.MM.yyyy HH:mm")</td>
                                <td>@tr.Termin.Beschreibung</td>
                                <td class="text-end">
                                    <div class="btn-group" role="group">
                                        <a class="btn btn-sm btn-outline-secondary"
                                           asp-controller="Termine"
                                           asp-action="Details"
                                           asp-route-id="@tr.Termin.Id">
                                            Details
                                        </a>
                                        <a class="btn btn-sm btn-outline-primary"
                                           asp-controller="Termine"
                                           asp-action="Edit"
                                           asp-route-id="@tr.Termin.Id">
                                            Bearbeiten
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
    </div>
</div>
